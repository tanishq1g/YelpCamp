<% include partials/header %>
<div class="jumbotron" style="border-color: blue">
    <div class="container">
        <h1>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
        </p>
    </div>
</div>
<div class="container">
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-sm-6 col-md-4 thumbnail">
                <img style="width: 100%; height: 100%" src="<%= campground.image %>">
                <div class="caption">
                    <h4><%= campground.name %> </h4>
                </div>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" >More Info</a>
            </div>
        <% }); %>
    </div>
</div>
<% include partials/footer %>
